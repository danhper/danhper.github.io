<%= form_for(@admin) do |f| %>
  <% if @admin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@admin.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @admin.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>
  <div>
    <span>
      <%= f.label :locale_ja, t('common.japanese'), :class => 'right' %>
    </span>
    <span>
      <%= f.radio_button :locale, 'ja', :checked => I18n.locale == :ja %>
    </span>
    <span>
      <%= f.label :locale_en, t('common.english'), :class => 'right' %>
    </span>
    <span>
      <%= f.radio_button :locale, 'en', :checked => I18n.locale == :en %>
    </span>
  </div>

  <div class="actions">
    <%= f.submit t('posts.save'), :class => 'button-style2' %>
  </div>

<% end %>
