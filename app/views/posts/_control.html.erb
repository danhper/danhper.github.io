<% if admin_signed_in? && !@confirmation %>
<span class="tiny">
    <% if !post.published %>
      <span>
        (<%= t 'posts.draft' %>)
      </span>
    <% end %>
    <%= link_to t('posts.edit'), edit_post_path(post) %>
    |
    <%= link_to t('posts.delete'), post, :method => :delete, :data => { :confirm => t('posts.confirm_delete') } %>
</span>
<% end %>
