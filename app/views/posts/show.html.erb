<article class="post">
    <header>
        <h2>
            <%= @post.title %>
        </h2>
        <div class="byline">
            <%= l @post.created_at, :format => :tiny %>
        </div>
    </header>
    <%= markdown @post.content %>

    <footer>
        <% if not @post.tags.empty? %>
        <span class="tags">
            <%= format_tags(@post.tags) %>
        </span>
        <% end %>
    </footer>
</article>

