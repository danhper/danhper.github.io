<article class="post">
    <header>
        <h2>
            <a href="#">
                <%= @post.title %>
            </a>
        </h2>
    </header>
    <%= markdown(@post.content) %>

    <footer>
        <span class="tags">
            Posted in <a href="#">News</a>, <a href="#">Work</a>, <a href="#">Something</a>
        </span>
    </footer>
</article>


<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= markdown(@post.content) %>
</p>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
