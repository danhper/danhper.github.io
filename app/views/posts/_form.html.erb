<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="row">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div class="row">
  <%= f.label :content %><br />
  <%= f.text_area :content %>
</div>
<div class="row">
  <fieldset>
    <legend><%= f.label :locale %> </legend>
    <div class="row">
      <div class="small-2 large-2 columns">
        <%= f.label :locale_ja, 'japanese', :class => 'right' %>
      </div>
      <div class="small-1 large-1 columns">
        <%= f.radio_button :locale, 'ja', :checked => true %>
      </div>
      <div class="small-2 large-2 columns">
        <%= f.label :locale_en, 'english', :class => 'right' %>
      </div>
      <div class="small-1 large-1 columns">
        <%= f.radio_button :locale, 'en', :checked => false %>
      </div>
      <div class="small-6 large-6 columns"></div>
    </div>
  </fieldset>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>
