<%= form_for(@post) do |f| %>
<% if @post.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div>
  <%= f.label :content %><br />
  <%= f.text_area :content %>
</div>
<div>
    <span>
      <%= f.label :locale_ja, 'japanese', :class => 'right' %>
    </span>
    <span>
      <%= f.radio_button :locale, 'ja', :checked => true %>
    </span>
    <span>
      <%= f.label :locale_en, 'english', :class => 'right' %>
    </span>
    <span>
      <%= f.radio_button :locale, 'en', :checked => false %>
    </span>
</div>
<div class="actions">
  <%= f.submit t('sessions.login'), :class => 'button-style2' %>
</div>
<% end %>
