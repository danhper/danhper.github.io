<div id="header-wrapper">
    <header id="page-header" class="5grid-layout">
        <div class="row">
            <div class="12u">
                <h1>
                    <%= link_to 'tuvistavie', root_path, :class => "mobileUI-site-name" %>
                </h1>
                <nav class="mobileUI-site-nav">
                    <ul>
                        <li>
                            <span>Language</span>
                            <ul>
                                <li>
                                    <%= link_to 'English', root_path(:locale => 'en') %>
                                </li>
                                <li>
                                    <%= link_to '日本語', root_path(:locale => 'ja') %>
                                </li>
                            </ul>
                        </li>
                        <% if admin_signed_in? %>
                        <li>
                            <%= link_to t('common.logout'), destroy_admin_session_path, :method => :delete, :class => 'no-dropotron' %>
