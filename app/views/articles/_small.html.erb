<section class="row">
    <div class="row">
        <h2 class="small-centered large-centered">
            <%= link_to article.title, article %>
        </h2>
    </div>
    <div class="row">
        <div class="last-column">
            <span class="posted">
                <%= l article.created_at, :format => :tiny %>
            </span>
        </div>
    </div>
    <article class="row content">
        <%= markdown(article.content) %>
    </article>
    <hr class="small-offset-1 large-offset-1 small-9 large-9 columns last-column separator">
</section>
