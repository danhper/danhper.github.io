<article class="post about-me">
    <header>
        <h2>
            <%= @admin.nickname %>
            <% if admin_signed_in? %>
            <span class="tiny">
                <%= link_to t('user.edit'), edit_admin_path(current_admin) %>
            </span>
            <% end %>
        </h2>
        <div class="byline">
            <%= @admin.full_name %>
        </div>
    </header>
    <span class="image align-left">
        <%= cl_image_tag(@admin.large_picture, :width => 280, :height => 274) %>
    </span>
    <div class="content">
        <%= markdown @admin.long_profile %>
    </div>
</article>

