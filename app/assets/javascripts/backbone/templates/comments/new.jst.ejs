<form id="new-comment" name="comment">
  <table>
    <tr>
      <th>
        <label for="new-comment-author"><%= I18n.t('comments.author') %></label>
      </th>
      <td>
        <input type="text" name="author" id="new-comment-name" value="<%= _.isNull(adminInfo) ? author : adminInfo.first_name %>" >
        <% if(errors.author) { %>
          <span class="error"><%= errors.author %></span>
        <% } %>
      </td>
    </tr>
    <tr>
      <th>
        <label for="new-comment-gravatar_email"><%= I18n.t('comments.email') %></label>
      </th>
      <td>
        <input type="text" name="gravatar_email" id="new-comment-gravatar_email" value="<%= _.isNull(adminInfo) ? gravatar_email : adminInfo.email %>" >
      </td>
    </tr>
    <tr>
      <th>
        <label for="new-comment-author"><%= I18n.t('comments.comment') %></label>
      </th>
      <td>
        <textarea name="content" id="new-comment-content" cols="60" rows="5" placeholder="<%= I18n.t('comments.markdown_info') %>"><%= content %></textarea>
        <% if(errors.content) { %>
          <span class="error"><%= errors.content %></span>
        <% } %>
      </td>
    </tr>
  </table>

  <div class="actions">
    <input type="submit" value="<%= I18n.t('comments.post') %>" class="post_button" />
  </div>
</form>
